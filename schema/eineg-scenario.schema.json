{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#Scenario",
  "title": "Eineg scenario schema",
  "description": "Schema for JSON-serialized scenario (SCN, SCX) file.",
  "type": "object",
  "properties": {
    "version": {
      "default": 1.0,
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "number"
        }
      ]
    },
    "title": {
      "type": "string"
    },
    "game": {
      "$ref": "Engine.schema.json#/definitions/Genie/definitions/Game"
    }
  }
}
